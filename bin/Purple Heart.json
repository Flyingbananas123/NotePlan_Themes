{
    "name": "Purple Heart",
    "style": "Dark",
    "author": {
        "name": "dntme17",
        "email": "dntme17@protonmail.com"
    },
    
    "editor": {
        "backgroundColor": "#3b2a38",
        "altBackgroundColor": "#5c4157", 
        "tintColor": "#ffbf6d",
        "tintColor2": "#62d8ff",
        "textColor":"#f4f4f1",
        "toolbarBackgroundColor": "#5c4157",
        "toolbarIconColor": "#222e33",
        "menuItemColor": "#222e33",
        "shouldOverwriteFont": true
    },
    
    "styles": {
        
        "body": {
            "font": "AvenirNext-Regular",
            "size": 16,
            "color": "#f4f4f1"
        },

        "title1": {
            "color": "#c572ec",
            "size": 28,
        },

        "title2": {
            "color": "#c572ec",
            "size": 24
        },
        
        "title3": {
            "regex": "^\\h*(### )(.*)",
            "color": "#c572ec",
            "size": 20,
        },

        "title4": {
            "regex": "^\\h*(####+ )(.*)",
            "matchPosition": 2,
            "color": "#c572ec",
            "size": 17,
            "isRevealOnCursorRange": true,
        },
        
        "title-mark1-custom": {
            "regex": "^\\h*(# )(.*)",
            "matchPosition": 1,
            "color": "#c572ec",
            "size": 28,
            "font": "AvenirNext-DemiBold",
        },
        
        "title-mark2-custom": {
            "regex": "^\\h*(## )(.*)",
            "matchPosition": 1,
            "color": "#c572ec",
            "size": 24,
            "font": "AvenirNext-DemiBold"
        },
        
        "title-mark3-custom": {
            "regex": "^\\h*(### )(.*)",
            "matchPosition": 1,
            "color": "#c572ec",
            "size": 20,
            "font": "AvenirNext-DemiBold",
            "isHiddenWithoutCursor": false,
            "isRevealOnCursorRange": false,
        },

        "title-mark4-custom": {
            "regex": "^\\h*(####+ )(.*)",
            "matchPosition": 1,
            "color": "#c572ec",
            "size": 17,
            "font": "AvenirNext-DemiBold",
        },
        
        "bold": {
            "type": "bold",            
        },
        
        "bold-left-mark-custom": {
            "regex": "(^|[\\W_])(?:(?!\\1)|(?=^))((\\*|_)\\3)(?=\\S)(.*?\\S)(\\3\\3)(?!\\2)(?=[\\W_]|$)",
            "matchPosition": 2,
            "color": "#e144d4",
        },
        
        "bold-right-mark-custom": {
            "regex": "(^|[\\W_])(?:(?!\\1)|(?=^))(\\*|_)\\2(?=\\S)(.*?\\S)(\\2\\2)(?!\\2)(?=[\\W_]|$)",
            "matchPosition": 4,
            "color": "#e144d4",
        },
        
        "italic": {
            "type": "italic"
        },
        
        "italic-left-mark": {
            "regex": "(^|[\\W_])(?:(?!\\1)|(?=^))(\\*|_)(?=\\S)((?:(?!\\2).)*?\\S)(\\2)(?!\\2)(?=[\\W_]|$)",
            "matchPosition": 2,
            "color": "#e144d4",
        },
        
        "italic-right-mark": {
            "regex": "(^|[\\W_])(?:(?!\\1)|(?=^))(\\*|_)(?=\\S)((?:(?!\\2).)*?\\S)(\\2)(?!\\2)(?=[\\W_]|$)",
            "matchPosition": 4,
            "color": "#e144d4",
        },
        
        "boldItalic": {
            "type": "bolditalic"
        },
        
        "boldItalic-left-mark": {
            "color": "#e144d4",
        },
        
        "boldItalic-right-mark": {
            "color": "#e144d4",
        },
        
        "code": {
            "font": "Menlo-Regular",
            "color": "#cb75f4",
            "backgroundColor": "#56334e",
            "size": 15
        },
    
        "code-left-backtick-custom": {
            "regex": "(`)([^`]{1,})(`)",
            "matchPosition": 1,
            "type": "bold",
            "color": "#e144d4",
            "font": "Menlo-Regular",
        },
        
        "code-right-backtick-custom": {
            "regex": "(`)([^`]{1,})(`)",
            "matchPosition": 3,
            "type": "bold",
            "color": "#e144d4",
            "font": "Menlo-Regular",
        },
        
        "checked": {
                "regex": "(^\\h*[\\*\\-]{1} |^\\h*[0-9]+[\\.\\)] )(\\[x\\] )(.*)",
                "matchPosition": 0,
                "color": "#747abc",
                "headIndent": 33        
            },
            
            "checked-canceled": {
                "regex": "(^\\h*[\\*\\-]{1} |^\\h*[0-9]+[\\.\\)] )(\\[\\-\\] )(.*)",
                "matchPosition": 0,
                "color": "#747abc",
                "headIndent": 33,
                "strikethroughStyle": 1
            },
            
            "checked-scheduled": {
                "regex": "(^\\h*[\\*\\-]{1} |^\\h*[0-9]+[\\.\\)] )(\\[\\>\\] )(.*)",
                "matchPosition": 0,
                "color": "#b0b8cc",
                "headIndent": 33
            },
        
        "todo": {
            "font": "noteplanstate",
            "color": "#ff215c",
            "headIndent": 33,
            "size": 16
        },
        
        "checked-todo-characters": {
            "font": "noteplanstate",
            "headIndent": 33,
            "size": 16
        },
        
        "special-char": {
            "font": "Menlo-Regular"
        },
        
        "tabbed": {
            "headIndent": 43
        },
        
        "quote-mark": {
            "color": "#ff215c",
            "font": "noteplanstate",
            "headIndent": 33,
            "size": 16
        },
        
        "quote-content": {
            "color": "#b0b8cc",
            "type": "italic",
            "headIndent": 33
        },

        "link": {},
                        
        "schedule-to-date-link": {},

        "schedule-from-date-link": {},
        
        "done-date": {},

        "note-title-link": {},
        
        "hashtag": {},
        
        "attag": {},
        
        "phonenumber": {},
        
        "highlighted": {
            "regex": "(::)([^:]{1,})(::)",
            "matchPosition": 0,
            "backgroundColor": "#4fae00"
        },

        "strikethrough": {
            "regex": "(~~)([^:]{1,})(~~)",
            "matchPosition": 2,
            "strikethroughStyle": 1,
            "strikethroughColor": "#b0b8cc",
            "color": "#b0b8cc",
        },

        "hot": {
            "regex": "(^|\\v)\\h*(\\*|-)\\h*\\[ \\]\\h+(.*?#hot.*)($|\\v)",
            "matchPosition": 3,
            "backgroundColor": "#008cca",
        },
    }
}